page {
  padding: 30rpx;
  box-sizing: border-box;
}

/* 轮播图宽高比锁定2比1 */
.carousels {
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 345rpx;
}

.carousels swiper-item {
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}

.carousels image {
  width: 100%;
  border-radius: 12rpx;
  height: 100%;

}

.list-item {
  box-shadow: 0 0 20rpx rgb(216, 216, 216);
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  padding: 40rpx 20rpx ;
  background-position-x: -20rpx;
  transition: background-position-x 200ms;
}


.list-item-hover {
  background-position-x: 0;
}