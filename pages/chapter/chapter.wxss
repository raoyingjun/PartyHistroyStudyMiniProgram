page {
  padding: 30rpx;
  box-sizing: border-box;
}

.title {
  font-weight: bold;
  margin: 30rpx auto;
}

.list {
  border-top: 1px solid rgb(235, 235, 235);
  font-size: 30rpx;
}

.list-item {
  color: rgb(75, 75, 75);
  padding: 20rpx 0;
}

.list-item {
  border-bottom: 1px solid rgb(235, 235, 235);
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-item-title {
  padding-right: 15rpx;
}

.list-item-state {
  width: 36rpx;
  flex-shrink: 0;
  height: 36rpx;
  background-image: linear-gradient(to bottom, rgb(211, 211, 211), #797979);
  border-radius: 50%;
  margin-left: auto;
}

.list-item-state.checked {
  background-image: linear-gradient(to bottom, rgb(255, 166, 0), #f9342e);
}

.list-item-hover {
  background-color: rgb(235, 235, 235);
}